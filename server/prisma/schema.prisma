generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  password   String
  role       Role     @default(USER)
  username   String   @unique
  authType   AuthType @default(EMAIL)
  identifier String   @unique
  createdAt  DateTime @default(now())
  img             String
  WishListDevices String[]
  CartDevices     Cart[]
  devices         Device[]
  Order           Order[]
  Review          Review[]
  transactions    Transaction[]
}

model Cart {
  DeviceId String
  Quantity Int
  userId   String
  user     User   @relation(fields: [userId], references: [id])
  @@id([DeviceId, userId])
}

model Device {
  DeviceId       String      @id @default(uuid())
  DeviceName     String
  userId         String?
  Brand          String
  Model          String
  Quantity       Int
  Description    String
  Price          Float
  Specifications Json
  categoryid     String
  Images         String[]
  orderOrderId   String?
  Category       Category    @relation(fields: [categoryid], references: [CategoryId])
  Order          Order?      @relation(fields: [orderOrderId], references: [OrderId])
  user           User?       @relation(fields: [userId], references: [id])
  OrderItem      OrderItem[]
  Reviews        Review[]
  Condition      String
  SerialNumber   String
  status         Status      @default(PENDING)
}

model Transaction {
  TransactionId String        @id @default(uuid())
  userId        String
  price         Float
  paymentStatus PaymentStatus
  createdAt     DateTime      @default(now())
  sessionId     String        @unique
  user          User          @relation(fields: [userId], references: [id])
}

model Category {
  CategoryId   String   @id @default(uuid())
  CategoryName String   @unique
  Image        String
  Description  String
  devices      Device[]
}

model Order {
  OrderId    String      @id @default(uuid())
  userId     String
  createdAt  DateTime    @default(now())
  totalPrice Float
  status     OrderStatus
  address    String
  city       String
  country    String
  zipCode    String
  Device     Device[]
  user       User        @relation(fields: [userId], references: [id])
  items      OrderItem[]
}

model OrderItem {
  id       String @id @default(uuid())
  orderId  String
  deviceId String
  quantity Int
  device   Device @relation(fields: [deviceId], references: [DeviceId])
  order    Order  @relation(fields: [orderId], references: [OrderId])
}

model Review {
  ReviewId    String   @id @default(uuid())
  description String
  rating      Float
  userId      String
  deviceId    String
  createdAt   DateTime @default(now())
  device      Device   @relation(fields: [deviceId], references: [DeviceId])
  user        User     @relation(fields: [userId], references: [id])

  @@unique([userId, deviceId])
}

enum OrderStatus {
  PENDING
  CONFIRMED
  SHIPPED
  DELIVERED
  CANCELLED
}

enum Role {
  USER
  ADMIN
}

enum AuthType {
  GOOGLEID
  EMAIL
}

enum Status {
  PENDING
  CONFIRMED
  REJECTED
  SOLD
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
}
